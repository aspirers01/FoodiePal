<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="22dp"
    android:layout_marginTop="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="210dp"
        android:layout_height="190dp">

        <ImageView
            android:id="@+id/popular_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/pizza_sample" />

        <ImageView
            android:id="@+id/img_gradient"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="bottom"
            android:src="@drawable/image_btm_overlay" />

        <TextView
            android:id="@+id/popular_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:fontFamily="@font/poppines"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="22dp"
            android:text="here is the  sample text"
            android:textColor="@color/background"
            android:textSize="16sp"></TextView>

        <TextView
            android:id="@+id/populal_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="7dp"
            android:fontFamily="@font/poppines"
            android:maxLength="10"
            android:paddingStart="15dp"
            android:text="ðŸ• 20 mins"
            android:textColor="@color/background"
            android:textSize="11sp" />

    </androidx.cardview.widget.CardView>
</LinearLayout> 